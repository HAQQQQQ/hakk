{
	"compilerOptions": {
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictBindCallApply": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"target": "ES2021", // Common Target
		"baseUrl": ".", // Workspace-wide base URL
		"paths": {
			"@/*": ["packages/server/src/*"],
			"@app/*": ["packages/server/src/app/*"],
			"@config/*": ["packages/server/src/config/*"],
			"@modules/*": ["packages/server/src/modules/*"],
			"@common/*": ["packages/server/src/common/*"],
			"@client/*": ["packages/client/src/*"] // client alias added
		}
	},
	"exclude": ["node_modules"],
	"include": ["packages/*/src/**/*", "packages/*/next-env.d.ts"]
}
