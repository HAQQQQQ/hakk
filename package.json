{
	"name": "hakk",
	"version": "1.0.0",
	"private": true,
	"description": "Monorepo for hakk project with Next.js client and NestJS backend",
	"license": "UNLICENSED",
	"scripts": {
		"start:client": "pnpm --filter packages/client start",
		"start:server": "pnpm --filter packages/server start",
		"start:redis_service": "pnpm --filter packages/redis-service start",
		"start": "concurrently \"pnpm start:server\" \"pnpm start:client\"",
		"build": "pnpm -r build",
		"clean": "bash scripts/clean.sh",
		"lint": "pnpm -r lint",
		"test": "pnpm -r test",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"docker:ps": "docker-compose ps",
		"docker:build": "docker-compose build",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f",
		"docker:restart": "docker-compose restart",
		"docker:prune": "docker system prune -f",
		"docker:clean": "docker-compose down && docker system prune -af && docker volume prune -f",
		"supabase:start": "npx supabase start",
		"supabase:stop": "npx supabase stop",
		"export-schemas": "tsx packages/server/scripts/export-schemas.ts"
	},
	"devDependencies": {
		"concurrently": "^8.2.0",
		"lint-staged": "^13.0.0",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"tsx": "^4.19.3"
	},
	"dependencies": {
		"zod": "^3.24.2",
		"zod-to-json-schema": "^3.24.5"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
