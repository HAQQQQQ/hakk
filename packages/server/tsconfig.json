{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"outDir": "./dist",
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@modules/*": ["src/modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test"]
}
